OSC_CONF:
    BSF     STATUS,RP0
    BCF     STATUS,RP1  ;ESCOJO EL BANCO 1
    MOVLW   0X11	;EL OSCILADOR INTERNO ENABLE, Y Fosc = 125KHz
    MOVWF   OSCCON	;
    BANKSEL PORTA   
RETURN
    
PORT_CONF:
    BANKSEL TRISA
    MOVLW   0XFF
    MOVWF   TRISA   ;PORTA COMO ENTRADA
    MOVLW   0X01
    MOVWF   TRISD   ;BIT 1 PORTD COMO ENTRADA
    BANKSEL ANSEL
    CLRF    ANSEL   ;ENTRADAS DIGITALES ANSEL EN 0
    CLRF    ANSELH  
    BANKSEL TRISB
    CLRF    TRISB   ;CLAREO LOS TRIS B Y C PARA SALIDA
    CLRF    TRISC
    BANKSEL PORTA   
    CLRF    PORTA
    CLRF    PORTB
    CLRF    PORTC
RETURN